<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.cyberflow.sparkle.im.viewmodel.FriendRequestEmpty" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/sp_29"
            android:layout_marginStart="@dimen/dp_11"
            android:layout_marginEnd="@dimen/dp_11"
            android:background="@drawable/main_bg_horoscope_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_63"
            android:background="@drawable/im_bg_add_friend_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:src="@drawable/main_ic_dialog_add_friends"
            app:layout_constraintBottom_toBottomOf="@+id/bg"
            app:layout_constraintLeft_toLeftOf="@+id/bg"
            app:layout_constraintTop_toTopOf="@+id/bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_44"
            android:text="Friends Request"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintBottom_toBottomOf="@+id/bg"
            app:layout_constraintLeft_toLeftOf="@+id/bg"
            app:layout_constraintTop_toTopOf="@+id/bg" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/svg_ic_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>