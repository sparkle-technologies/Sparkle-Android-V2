<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#00000000"
    android:clipChildren="false"
    android:gravity="bottom"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="10dp"
    tool:background="#fffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_friends_off"
            app:layout_constraintBottom_toBottomOf="parent" />


        <com.cyberflow.sparkle.main.widget.NumView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:num_text_color="@color/black"
            app:num_text_size="@dimen/sp_4"
            app:num_view_color="@color/color_FFDD5B"
            app:num_view_strokeColor="@color/black"
            app:num_view_strokeWidth="@dimen/dp_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_feed_off" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/centerIcon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/nav_eye_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_notify_off" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_profile_off" />

    </LinearLayout>

</LinearLayout>


