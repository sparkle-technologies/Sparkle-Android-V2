<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#00000000"
    android:clipChildren="false"
    android:gravity="bottom"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="10dp"
    tool:background="#fffff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_friends_off" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_feed_off" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/centerIcon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/nav_eye_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_notify_off" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_profile_off" />

    </LinearLayout>

</LinearLayout>


