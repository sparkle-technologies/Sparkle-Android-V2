<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_335"
    android:layout_height="188dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/foward_dialog_bg_16_radius">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:fontFamily="@font/poppins_bold"
        android:text="Cannot disconnect"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_66"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@null"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/color_7B7B7B"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Please keep at least one account connected." />

    <com.cyberflow.sparkle.widget.ShadowTxtButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:view_bg="@drawable/register_btn_next_white"
        app:view_disable="false"
        app:view_shadow_distance="1dp"
        app:view_text="Okay"
        app:view_text_bold="true"
        app:view_text_color="@color/black"
        app:view_text_size="@dimen/sp_17" />

</androidx.constraintlayout.widget.ConstraintLayout>