<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_204"
            android:text="Before you begin"
            android:textSize="@dimen/sp_36"
            android:fontFamily="@font/poppins_extrabold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="@+id/tv_title"
            android:text="Tell us your preference on avatar style. \nThis will be your identity in web3 world."
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <View
            android:id="@+id/anchor"
            android:layout_width="2dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <ImageView
            android:id="@+id/iv_man_shadow"
            android:layout_width="@dimen/dp_138"
            android:layout_height="@dimen/dp_51"
            android:layout_marginBottom="@dimen/dp_negative_6"
            app:layout_constraintBottom_toBottomOf="@+id/iv_man_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_man_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_man_bg"
            app:srcCompat="@drawable/button_start_shadow" />


        <ImageView
            android:id="@+id/iv_women_shadow"
            android:layout_width="@dimen/dp_138"
            android:layout_height="@dimen/dp_51"
            android:layout_marginBottom="@dimen/dp_negative_6"
            app:layout_constraintBottom_toBottomOf="@+id/iv_women_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_women_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_women_bg"
            app:srcCompat="@drawable/register_bg_gender_white" />

        <ImageView
            android:id="@+id/iv_man_bg"
            android:layout_width="@dimen/dp_158"
            android:layout_height="@dimen/dp_190"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_9"
            app:layout_constraintRight_toLeftOf="@+id/anchor"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            app:srcCompat="@drawable/register_bg_gender_man" />

        <ImageView
            android:id="@+id/iv_women_bg"
            android:layout_width="@dimen/dp_158"
            android:layout_height="@dimen/dp_190"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintLeft_toRightOf="@+id/anchor"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            app:srcCompat="@drawable/register_bg_gender_white" />


        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            app:layout_constraintBottom_toBottomOf="@+id/iv_man_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_man_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_man_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_man_bg"
            app:srcCompat="@drawable/register_ic_man" />


        <ImageView
            android:id="@+id/iv_women"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            app:layout_constraintBottom_toBottomOf="@+id/iv_women_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_women_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_women_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_women_bg"
            app:srcCompat="@drawable/register_ic_women" />

        <com.cyberflow.sparkle.widget.ShadowTxtButton
            android:id="@+id/btn_register_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_46"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:view_bg="@drawable/register_btn_next"
            app:view_disable_bg="@drawable/register_btn_next_disable"
            app:view_disable="true"
            app:view_shadow_distance="1dp"
            app:view_text="Next" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>