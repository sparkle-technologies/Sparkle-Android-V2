<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.cyberflow.sparkle.main.view.OfficialCoraModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@drawable/main_bg_shadow_offcial_cora"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/main_friends_chat_bg_cora"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/main_bg_stroke_offcial_cora"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/tv_cora_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cora"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/bg"
            app:layout_constraintLeft_toLeftOf="@+id/bg"
            app:layout_constraintTop_toTopOf="@+id/bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/what_s_in_your_mind"
            android:textColor="@color/color_B3B3D5"
            android:textSize="@dimen/sp_9"
            app:layout_constraintBottom_toTopOf="@+id/tv_cora_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_cora_name" />

        <ImageView
            android:id="@+id/bg_question"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp_3"
            android:src="@drawable/pic_cora_question"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cora_name" />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="220dp"
            android:layout_height="15dp"
            app:banner_orientation="vertical"
            android:layout_marginStart="@dimen/dp_22"
            app:layout_constraintTop_toTopOf="@+id/bg_question"
            app:layout_constraintBottom_toBottomOf="@+id/bg_question"
            app:layout_constraintLeft_toLeftOf="@+id/bg_question"
            app:layout_constraintRight_toRightOf="@+id/bg_question"/>

        <TextView
            android:id="@+id/cora_unread"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            tools:text="You have a new message"
            android:gravity="center_vertical"
            android:textColor="@color/color_8B82DB"
            android:textSize="@dimen/sp_11"
            android:layout_marginStart="@dimen/dp_22"
            app:layout_constraintTop_toTopOf="@+id/bg_question"
            app:layout_constraintBottom_toBottomOf="@+id/bg_question"
            app:layout_constraintLeft_toLeftOf="@+id/bg_question"
            app:layout_constraintRight_toRightOf="@+id/bg_question"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_4"
            android:scaleType="centerInside"
            android:src="@drawable/pic_cora_v2"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
