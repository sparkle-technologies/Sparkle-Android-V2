<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_000000_75">

        <com.cyberflow.sparkle.widget.ShadowImgButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:view_bg_src="@drawable/main_ic_add_friends_bg"
            app:view_img_shadow_distance="1dp"
            app:view_img_src="@drawable/share_ic_delete" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg"
            android:layout_width="300dp"
            android:layout_height="430dp"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@drawable/share_bg_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_delete">

            <View
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/share_bg_half_right_16_radius"
                app:layout_constraintRight_toRightOf="@+id/bg"
                app:layout_constraintTop_toTopOf="@+id/bg" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@+id/bg"
                app:layout_constraintTop_toTopOf="@+id/bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_18"
                android:src="@drawable/main_ic_three_dots"
                app:layout_constraintBottom_toBottomOf="@+id/line"
                app:layout_constraintRight_toRightOf="@+id/bg"
                app:layout_constraintTop_toTopOf="@+id/bg" />

            <View
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_277"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/profile_bg_yellow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/img_card"
                android:layout_width="244dp"
                android:layout_height="261dp"
                android:layout_marginTop="@dimen/dp_21"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp_20"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:strokeColor="@color/black"
                app:strokeWidth="@dimen/dp_1">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_default_avatar" />

            </com.google.android.material.card.MaterialCardView>


            <View
                android:id="@+id/line_horizon"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_23"
                android:background="@drawable/dash_line_divider_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_card" />

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:layout_marginEnd="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_29"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="Charlotte Nguyen "
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_qr_code"
                app:layout_constraintTop_toBottomOf="@+id/line_horizon" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_5"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:text="Add me on Sparkle ! "
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_qr_code"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>