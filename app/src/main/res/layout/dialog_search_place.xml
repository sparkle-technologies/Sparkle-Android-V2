<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_3rd">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/svg_btn_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#2A2A2B"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="@string/current" />
    </RelativeLayout>


    <EditText
        android:id="@+id/edt_search_place"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/Place"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textColor="@color/gray_1st"
        android:textColorHint="#7D7D80"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title_bar"
        tools:textColor="#484849" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/edt_search_place"
        app:layout_constraintTop_toTopOf="@id/edt_search_place"
        app:srcCompat="@drawable/svg_clear" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_search_place" />

</androidx.constraintlayout.widget.ConstraintLayout>