<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_188"
    android:layout_gravity="center"
    android:background="@drawable/im_bg_permission_dialog"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:fontFamily="@font/poppins_bold"
        android:singleLine="true"
        android:text="Unable to access the gallery"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/poppins_regular"
        android:text="You have turned off gallery  permissions."
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />


    <com.cyberflow.sparkle.widget.ShadowTxtButton
        android:id="@+id/btn_cancel"
        android:layout_width="140dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_go_setting"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:view_bg="@drawable/register_btn_next_disable"
        app:view_shadow_distance="1dp"
        app:view_text="Cancel" />

    <com.cyberflow.sparkle.widget.ShadowTxtButton
        android:id="@+id/btn_go_setting"
        android:layout_width="140dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel"
        app:view_bg="@drawable/register_btn_next"
        app:view_shadow_distance="1dp"
        app:view_text="Go to settings" />


</androidx.constraintlayout.widget.ConstraintLayout>
