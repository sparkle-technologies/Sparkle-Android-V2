<?xml version="1.0" encoding="utf-8"?>
<com.hyphenate.easeui.input.InputAwareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hyphenate.easeui.modules.chat.EaseChatMessageListLayout
            android:id="@+id/layout_chat_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay_questions"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/aio_bg_question">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_11">

                <TextView
                    android:id="@+id/question_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/color_8B82DB"
                    android:textSize="@dimen/sp_14"
                    tools:text="When can I become rich ?" />

                <TextView
                    android:id="@+id/question_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/color_8B82DB"
                    android:textSize="@dimen/sp_14"
                    tools:text="When can I meet my Mr. Right ?" />

                <TextView
                    android:id="@+id/question_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/color_8B82DB"
                    android:textSize="@dimen/sp_14"
                    tools:text="When can I meet my Mr. Right ?" />

                <TextView
                    android:id="@+id/question_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/color_8B82DB"
                    android:textSize="@dimen/sp_14"
                    tools:text="When can I meet my Mr. Right ?" />

                <TextView
                    android:id="@+id/question_tv5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:textColor="@color/color_8B82DB"
                    android:textSize="@dimen/sp_14"
                    android:text="When can I meet my Mr. Right ?" />

            </LinearLayout>

            <com.cyberflow.sparkle.widget.ShadowImgButton
                android:id="@+id/btn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:view_img_shadow_distance="1dp"
                app:view_img_src="@drawable/aio_ic_questions_fresh" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.hyphenate.easeui.modules.chat.EaseChatInputMenu
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</com.hyphenate.easeui.input.InputAwareLayout>