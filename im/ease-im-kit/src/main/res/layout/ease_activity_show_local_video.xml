<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hyphenate.easeui.player.EasyVideoPlayer
        android:id="@+id/evp_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_image_video_play"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_image_show"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="5dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_image_download"
        app:layout_constraintBottom_toBottomOf="@+id/iv_save"
        app:layout_constraintRight_toLeftOf="@+id/iv_save"
        app:layout_constraintTop_toTopOf="@+id/iv_save" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="12dp"
        android:padding="5dp"
        android:src="@drawable/ic_image_delete"
        app:layout_constraintBottom_toBottomOf="@+id/iv_share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_share" />

</androidx.constraintlayout.widget.ConstraintLayout>