<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/chat_bg_receive_msg"
        android:gravity="center_horizontal"
        android:minWidth="278dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingTop="9dp"
        android:paddingEnd="11dp"
        android:paddingBottom="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="6dp"
            android:text="Your choice:"
            android:textColor="@color/color_7d7d80"
            android:textSize="13sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="256dp"
            android:layout_height="158.5dp"
            android:layout_gravity="left"
            android:background="@drawable/aio_bg_result">

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/iv2"
                android:layout_width="55dp"
                android:layout_height="101dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/iv1"
                android:layout_width="55dp"
                android:layout_height="101dp"
                android:layout_marginStart="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv2" />

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/iv3"
                android:layout_width="55dp"
                android:layout_height="101dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv2" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="The fool"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv2"
                app:layout_constraintRight_toRightOf="@+id/iv2"
                app:layout_constraintTop_toBottomOf="@+id/iv2" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="The fool"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv1"
                app:layout_constraintRight_toRightOf="@+id/iv1"
                app:layout_constraintTop_toTopOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="The fool"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv3"
                app:layout_constraintRight_toRightOf="@+id/iv3"
                app:layout_constraintTop_toTopOf="@+id/tv2" />


            <TextView
                android:id="@+id/tv2_bottom"
                android:layout_width="47dp"
                android:layout_height="11dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/aio_bg_reserved"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Reserved"
                android:textColor="@color/black"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv2"
                app:layout_constraintRight_toRightOf="@+id/tv2" />


            <TextView
                android:id="@+id/tv1_bottom"
                android:layout_width="47dp"
                android:layout_height="11dp"
                android:background="@drawable/aio_bg_reserved"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Reserved"
                android:textColor="@color/black"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv2_bottom"
                app:layout_constraintLeft_toLeftOf="@+id/tv1"
                app:layout_constraintRight_toRightOf="@+id/tv1" />


            <TextView
                android:id="@+id/tv3_bottom"
                android:layout_width="47dp"
                android:layout_height="11dp"
                android:background="@drawable/aio_bg_reserved"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Reserved"
                android:textColor="@color/black"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv2_bottom"
                app:layout_constraintLeft_toLeftOf="@+id/tv3"
                app:layout_constraintRight_toRightOf="@+id/tv3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/iv_userhead"
            style="@style/ease_row_receive_iv_userhead_style" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/chat_bg_receive_msg"
            android:minWidth="30dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/tv_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:autoLink="web"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center|left"
                android:lineSpacingExtra="2dp"
                android:maxWidth="248dp"
                android:minHeight="@dimen/ease_chat_text_min_height"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="环信sssssads环信sssssadsfsdfsdfasdfasdfasdfasd环信sssssadsfsdfsdfasdfasdfasdfasd环信sssssadsfsdfsdfasdfasdfasdfasd环信sssssadsfsdfsdfasdfasdfasdfasd环信sssssadsfsdfsdfasdfasdfasdfasdfsdfsdfasdfasdfasdfasd" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:layout_toRightOf="@id/iv_userhead"
            android:textSize="@dimen/chat_nick_text_size"
            android:visibility="gone"
            tools:text="som" />

        <com.cyberflow.sparkle.widget.ShadowImgButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_alignBottom="@+id/bubble"
            android:layout_alignParentRight="true"
            app:view_img_shadow_distance="1dp"
            app:view_img_src="@drawable/aio_ic_share" />

    </RelativeLayout>

</LinearLayout>