<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/em_base_color_primary</item>
        <item name="colorPrimaryDark">@color/em_base_color_primary_dark</item>
        <item name="colorAccent">@color/em_base_color_accent</item>
        <!-- Customize EditText text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Customize text cursor -->
        <item name="android:textCursorDrawable">@drawable/demo_text_cursor_drawable</item>
        <!-- Customize text color hint -->
        <item name="android:textColorHint">@color/em_base_color_text_hint</item>
        <item name="android:windowBackground">@color/em_base_color_window_bg</item>
        <item name="android:divider">@drawable/demo_default_divider_list</item>
        <!-- remove button default shadow effect -->
        <item name="android:buttonStyle">@style/Button.BorderLess</item>
    </style>


    <style name="Button.BorderLess" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
